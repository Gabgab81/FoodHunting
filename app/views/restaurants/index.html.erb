<div class="indexrestaurants">
  <div class="positionmap">
  </div>
  <div class="list">
    <% if !@restaurants.nil? %>
      <% @restaurants.each do |restaurant| %>
          <%= render "components/smallcard", restaurant: restaurant %>
      <% end %>
    <% end %>

    <% if !@meals.nil? %>
      <% @meals.each do |meal| %>
          <li><%= link_to meal.name, meal_path(meal)  %> </li>
      <% end %>
    <% end %>
  </div>


  <div class="mapindex"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
  </div>
</div>
