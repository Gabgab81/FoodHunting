<div class="homepage">
    <div>
        <h2 class = "title">Best rated restaurants</h2>
    </div>
    
    <div class="display-card-and-btn" data-controller="defilement-card">
        <button class="left" data-action="click->defilement-card#previous">
            <i class="fa-sharp fa-solid fa-circle-chevron-left"></i>
        </button>
        <div class="display-items" data-defilement-card-target="cards" >
            <% @bestRestaurants.each do |restaurant| %>
                <%= render "components/smallcard", restaurant: restaurant %>
            <% end %>
        </div>
        <button class="right" data-action="click->defilement-card#next">
            <i class="fa-sharp fa-solid fa-circle-chevron-right"></i>
        </button>
    </div>
    
        
    
    
    <div>
        <h2 class = "title">Last open restaurants</h2>
    </div>

    <div class="display-card-and-btn" data-controller="defilement-card">
        <button class="left" data-action="click->defilement-card#previous">
            <i class="fa-sharp fa-solid fa-circle-chevron-left"></i>
        </button>
        <div class="display-items" data-defilement-card-target="cards" >
            <% @newerRestaurants.each do |restaurant| %>
                <%= render "components/smallcard", restaurant: restaurant %>
            <% end %>
        </div>
        <button class="right" data-action="click->defilement-card#next">
            <i class="fa-sharp fa-solid fa-circle-chevron-right"></i>
        </button>
    </div>
    
    <div>
        <h2 class = "title">The most comments restaurants</h2>
    </div>

    <div class="display-card-and-btn" data-controller="defilement-card">
        <button class="left" data-action="click->defilement-card#previous">
            <i class="fa-sharp fa-solid fa-circle-chevron-left"></i>
        </button>
        <div class="display-items" data-defilement-card-target="cards" >
            <% @popularRestaurants.each do |restaurant| %>
                <%= render "components/smallcard", restaurant: restaurant %>
            <% end %>
        </div>
        <button class="right" data-action="click->defilement-card#next">
            <i class="fa-sharp fa-solid fa-circle-chevron-right"></i>
        </button>
    </div>

    <div class="commentmeal">

        <div class="commentside">
            <h2>The last comments</h2>
            <% @lastComments.each do |comment| %>
                <%= render "components/commentcardhome", comment: comment %>
            <% end %>
        </div>
        

        <div class="mealside">
            <h2>The last new meals</h2>
            <% @lastMeals.each do |meal| %>
                <%= link_to meal_path(meal) do %>
                    <%= render "components/cardproduct", meal: meal %>
                <% end %>
            <% end %>
        </div>
        
    </div>
    
</div>