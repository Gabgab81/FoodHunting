<div class="comment-adv">
  <div class="simple-form">
    <%= simple_form_for([restaurant, comment], data: {
      insert_in_list_target: "form",
      action: "submit->insert-in-list#send"
      }) do |f| %>
        <%= f.input :content, label: false, placeholder: 'Add a comment' %>
        <%= f.submit "Send" %>
    <% end %>
  </div>
</div>